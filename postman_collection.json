{
  "info": {
    "name": "Smart Recon API",
    "description": "API collection for Smart Reconciliation & Audit System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"admin@smartrecon.com\",\n    \"password\": \"admin123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Login (Analyst)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"analyst@smartrecon.com\",\n    \"password\": \"analyst123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Login (Viewer)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"viewer@smartrecon.com\",\n    \"password\": \"viewer123\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/auth/me"
          }
        },
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/auth/users"
          }
        }
      ]
    },
    {
      "name": "Upload",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": "{{baseUrl}}/upload"
          }
        },
        {
          "name": "Get All Upload Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/upload"
          }
        },
        {
          "name": "Get Upload Preview",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/upload/:id/preview"
          }
        },
        {
          "name": "Save Column Mapping",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"mapping\": {\n        \"transactionId\": \"transactionId\",\n        \"amount\": \"amount\",\n        \"referenceNumber\": \"referenceNumber\",\n        \"date\": \"date\",\n        \"description\": \"description\"\n    }\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/upload/:id/mapping"
          }
        },
        {
          "name": "Get Upload Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/upload/:id/status"
          }
        }
      ]
    },
    {
      "name": "Reconciliation",
      "item": [
        {
          "name": "Run Reconciliation",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{baseUrl}}/reconciliation/run/:uploadJobId"
          }
        },
        {
          "name": "Get Results",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reconciliation/:uploadJobId?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["reconciliation", ":uploadJobId"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" },
                { "key": "status", "value": "", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Get Job Summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/reconciliation/:uploadJobId/summary"
          }
        },
        {
          "name": "Resolve Result",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"newStatus\": \"matched\",\n    \"correctedFields\": {\n        \"amount\": 1250.50\n    }\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/reconciliation/:id/resolve"
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Get Summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dashboard/summary",
              "host": ["{{baseUrl}}"],
              "path": ["dashboard", "summary"],
              "query": [
                { "key": "dateFrom", "value": "", "disabled": true },
                { "key": "dateTo", "value": "", "disabled": true },
                { "key": "status", "value": "", "disabled": true },
                { "key": "uploadedBy", "value": "", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Get Chart Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/dashboard/chart"
          }
        },
        {
          "name": "Get Filter Options",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/dashboard/filters"
          }
        }
      ]
    },
    {
      "name": "Audit",
      "item": [
        {
          "name": "Get All Audit Logs (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/audit?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["audit"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" },
                { "key": "entityType", "value": "", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Get Entity Audit Timeline",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/audit/entity/:entityId"
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health",
            "auth": { "type": "noauth" }
          }
        }
      ]
    }
  ]
}
